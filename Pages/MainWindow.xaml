<Window x:Class="_222_Goman_WPF_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_222_Goman_WPF_Project"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        Title="Главное окно приложения" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>
        <Frame x:Name="MainFrame" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" NavigationUIVisibility="Hidden"/>
        <TextBlock x:Name="DateTimeNow" HorizontalAlignment="Right" Margin="522,0,0,0" Grid.Row="2" VerticalAlignment="Center" Height="35" Width="194"/>
        <Button x:Name="ButtonBack" Width="70" Height="40" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10, 0, 0, 0" Content="Назад" Click="ButtonBack_Click"/>
        <Button x:Name="ButtonSignIn" Width="70" Height="40" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="100, 0, 0, 0" Content="Зайти" Click="ButtonSignIn_Click"/>
        <Button x:Name="ButtonChangeTheme" Width="200" Height="40" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0, 0, 10, 0" Content="Сменить тему" Click="ButtonChangeTheme_Click"/>
    </Grid>
</Window>
