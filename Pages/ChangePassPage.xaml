<Page x:Class="_222_Goman_WPF_Project.Pages.ChangePassPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_222_Goman_WPF_Project.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChangePassPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="61*" />
            <ColumnDefinition Width="739*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="45" />
            <RowDefinition Height="*" />
            <RowDefinition Height="45" />
        </Grid.RowDefinitions>
        <Label Grid.Column="1"
            Content="Введите логин"
            HorizontalAlignment="Left"
            Margin="91,13,0,0"
            Grid.Row="1"
            VerticalAlignment="Top"
            Width="128" />
        <Label Grid.Column="1"
            Content="Введите старый пароль"
            HorizontalAlignment="Left"
            Margin="91,65,0,0"
            Grid.Row="1"
            VerticalAlignment="Top"
            Width="148" />
        <Label Grid.Column="1"
            Content="Введите пароль"
            HorizontalAlignment="Left"
            Margin="91,120,0,0"
            Grid.Row="1"
            VerticalAlignment="Top"
            Width="128" />
        <Label Grid.Column="1"
            Content="Подтвердите пароль"
            HorizontalAlignment="Left"
            Margin="91,170,0,0"
            Grid.Row="1"
            VerticalAlignment="Top"
            Width="169" />
        <TextBox x:Name="txtbxLog"
            Background="Transparent"
            ToolTip="Введите логин или почту"
            Grid.Column="1"
            HorizontalAlignment="Left"
            Margin="339,13,0,0"
            Grid.Row="1"
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            Width="182"
            Height="29"
            TextChanged="txtbxLog_TextChanged" />


        <PasswordBox x:Name="passBxOld"
            Background="Transparent"
            ToolTip="Введите пароль"
            Grid.Column="1"
            HorizontalAlignment="Left"
            Margin="339,67,0,0"
            Grid.Row="1"
            VerticalAlignment="Top"
            Width="182"
            Height="33"
            PasswordChanged="passBxOld_PasswordChanged"/>

        <PasswordBox x:Name="passBxFrst"
            Background="Transparent"
            ToolTip="Введите пароль"
            Grid.Column="1"
            HorizontalAlignment="Left"
            Margin="339,120,0,0"
            Grid.Row="1"
            VerticalAlignment="Top"
            Width="182"
            Height="33"
            PasswordChanged="passBxFrst_PasswordChanged" />
        <PasswordBox x:Name="passBxScnd"
            Background="Transparent"
            ToolTip="Повторите пароль"
            Grid.Column="1"
            HorizontalAlignment="Left"
            Margin="339,170,0,0"
            Grid.Row="1"
            VerticalAlignment="Top"
            Width="182"
            Height="33"
            PasswordChanged="passBxScnd_PasswordChanged" />
        <Label x:Name="lblLogHitn"
            Foreground="Gray"
            Grid.Column="1"
            Content="Введите логин"
            HorizontalAlignment="Left"
            Margin="339,18,0,0"
            Grid.Row="1"
            VerticalAlignment="Top"
            Width="182"
            Height="29" 
            MouseLeftButtonUp="lblLogHitn_MouseLeftButtonUp"/>

        <Label x:Name="lblPassOldHitn"
            Foreground="Gray"
            Grid.Column="1"
            Content="Введите старый пароль"
            HorizontalAlignment="Left"
            Margin="339,65,0,0"
            Grid.Row="1"
            VerticalAlignment="Top"
            Width="182"
            Height="29"
            MouseLeftButtonUp="lblPassOldHitn_MouseLeftButtonUp"/>

        <Label x:Name="lblPassHitn"
            Foreground="Gray"
            Grid.Column="1"
            Content="Введите новый пароль"
            HorizontalAlignment="Left"
            Margin="339,120,0,0"
            Grid.Row="1"
            VerticalAlignment="Top"
            Width="182"
            Height="29"
            MouseLeftButtonUp="lblPassHitn_MouseLeftButtonUp"/>
        <Label x:Name="lblPassSecHitn"
            Foreground="Gray"
            Grid.Column="1"
            Content="Повторите новый пароль"
            HorizontalAlignment="Left"
            Margin="339,168,0,0"
            Grid.Row="1"
            VerticalAlignment="Top"
            Width="182"
            Height="33"
            MouseLeftButtonUp="lblPassSecHitn_MouseLeftButtonUp"/>
        
        <Button x:Name="changePassButton"
            Grid.Column="1"
            Content="Сменить пароль"
            HorizontalAlignment="Left"
            Margin="245,242,0,0"
            Grid.Row="1"
            VerticalAlignment="Top"
            RenderTransformOrigin="0.535,-0.075"
            Width="170"
            Click="changePassButton_Click" />
    </Grid>
</Page>
